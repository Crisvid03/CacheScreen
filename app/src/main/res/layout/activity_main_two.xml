<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicioApp.MainActivity"
    android:background="@color/background">

    <!-- ScrollView principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Contenedor para todo el contenido desplazable -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <!-- Layout horizontal para los indicadores -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <!-- Indicadores (CardViews) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/turkesa"
                    app:cardCornerRadius="100dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    app:cardCornerRadius="100dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="100dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="100dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Sección de contenido -->
            <View
                android:layout_width="332dp"
                android:layout_height="205dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="#0B191F"/>

            <!-- Texto explicativo -->
            <TextView
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="@string/explain"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <!-- Botón -->
            <Button
                android:id="@+id/btnMainTwo"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="90dp"
                android:backgroundTint="@color/turkesa"
                android:text="@string/next"
                android:textColor="@color/black"
                app:cornerRadius="20dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>