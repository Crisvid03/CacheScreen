<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Icono de app"
            android:src="@drawable/ic_default_app" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"> <!-- Por compatibilidad -->

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la App"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LÃ­mite: 1h 30min"
                android:textSize="14sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tv_used_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usado hoy: 15min"
                android:textSize="14sp"
                android:textColor="#757575" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
